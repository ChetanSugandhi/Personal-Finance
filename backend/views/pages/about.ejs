    <script>
        // Listen for the logout link click event
        document.querySelector('.logout-link').addEventListener('click', function (e) {
            e.preventDefault(); // Prevent default anchor link behavior (immediate redirect)
    
            // Display a confirmation message or modal if needed
            const successModal = document.createElement('div');
            successModal.classList.add('logout-modal');
            successModal.innerHTML = `
                <div class="modal-content">
                    <div class="emoji">✔️</div>
                    <h3>You have been logged out. Redirecting...</h3>
                </div>
            `;
            document.body.appendChild(successModal);
    
            // Add styles for the modal
            const style = document.createElement('style');
            style.textContent = `
                .logout-modal {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.5);
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    z-index: 1000;
                    animation: fadeIn 0.5s ease-in-out;
                }
                .modal-content {
                    background: white;
                    padding: 30px;
                    border-radius: 10px;
                    text-align: center;
                    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                    animation: scaleUp 0.3s ease-in-out;
                }
                .emoji {
                    font-size: 50px;
                    margin: 10px 0;
                }
                @keyframes fadeIn {
                    from {
                        opacity: 0;
                    }
                    to {
                        opacity: 1;
                    }
                }
                @keyframes scaleUp {
                    from {
                        transform: scale(0.8);
                    }
                    to {
                        transform: scale(1);
                    }
                }
            `;
            document.head.appendChild(style);
    
            // Wait for 2 seconds before redirecting
            setTimeout(function () {
                // Remove the modal before redirecting
                successModal.remove();
                window.location.href = '/'; // Redirect to the home route
            }, 2000); // 2 seconds delay
        });
    </script>    


