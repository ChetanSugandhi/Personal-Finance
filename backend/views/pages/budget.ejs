<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Budget Management</title>
  <link rel="stylesheet" href="/css/budget.css">
</head>

<body>
  <!-- Navbar -->
  <div class="sticky_nav">
    <div class="logo">
      <img src="/image/logo.png" alt="Logo">
      <h2>Spendsmart</h2>
    </div>
    <div class="nav">
      <a href="/new">Home</a>
      <a href="/features">Features</a>
      <a href="/showBudget">View Budgets</a>
    </div>
    <button class="sign-up">Sign Up</button>
  </div>

  <!-- Main Content -->
  <div class="container">
    <h1>Manage Your Budget</h1>

    <!-- Form to create or update budget -->
    <form action="/addBudget" method="POST">
      <div class="form-row">
        <div class="form-item">
          <label for="category">Category:</label>
          <input type="text" id="category" name="category" required>
        </div>
        <div class="form-item">
          <label for="budgetAmount">Budget Amount:</label>
          <input type="number" id="budgetAmount" name="budgetAmount" required>
        </div>
      </div>

      <div class="form-row">
        <div class="form-item">
          <label for="month">Select Month:</label>
          <select id="month" name="month" required>
            <option value="january">January</option>
            <option value="february">February</option>
            <option value="march">March</option>
            <option value="april">April</option>
            <option value="may">May</option>
            <option value="june">June</option>
            <option value="july">July</option>
            <option value="august">August</option>
            <option value="september">September</option>
            <option value="october">October</option>
            <option value="november">November</option>
            <option value="december">December</option>
          </select>
        </div>
        
        <div class="form-item">
          <label for="spentAmount">Spent Amount:</label>
          <input type="number" id="spentAmount" name="spentAmount" required placeholder="Enter amount">
        </div>
        
      </div>

      <div class="form-item">
        <label for="notes">Notes:</label>
        <textarea id="notes" name="notes"></textarea>
      </div>

      <button type="submit">Set Budget</button>
    </form>
  </div>

  <!-- Footer -->
  <div class="footer">
    <div class="footer-column">
      <h3>Company</h3>
      <ul>
        <li><a href="#">About</a></li>
        <li><a href="#">Careers</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </div>
    <div class="footer-column">
      <h3>Services</h3>
      <ul>
        <li><a href="#">Expense Tracking</a></li>
        <li><a href="#">Reports</a></li>
        <li><a href="#">Budgeting</a></li>
      </ul>
    </div>
    <div class="footer-column">
      <h3>Support</h3>
      <ul>
        <li><a href="#">Help Center</a></li>
        <li><a href="#">FAQs</a></li>
        <li><a href="#">Contact Support</a></li>
      </ul>
    </div>
  </div>
</body>

</html>
